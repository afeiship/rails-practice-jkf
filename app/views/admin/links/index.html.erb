<h1>Admin Links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_links.each do |admin_link| %>
      <tr>
        <td><%= admin_link.title %></td>
        <td><%= admin_link.image %></td>
        <td><%= admin_link.link %></td>
        <td><%= link_to 'Show', admin_link %></td>
        <td><%= link_to 'Edit', edit_admin_link_path(admin_link) %></td>
        <td><%= link_to 'Destroy', admin_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Link', new_admin_link_path %>
